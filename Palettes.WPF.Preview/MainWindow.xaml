<Window x:Class="PatioCode.Palettes.WPF.Preview.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PatioCode.Palettes.WPF.Preview.Views"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="800"
        Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <TabControl>
        
        <TabControl.Resources>
            <Style TargetType="{x:Type TabItem}">
                <Setter Property="FontSize" Value="14"/>
            </Style>
        </TabControl.Resources>
        
        <TabItem
            Header="Tailwind">
            <views:TailwindPalette/>
        </TabItem>
        
        <TabItem
            Header="Bootstrap">
            <views:BootstrapPalette/>
        </TabItem>
        
        <TabItem
            Header="Material Design 2">
            <views:MaterialDesign2Palette/>
        </TabItem>
        
        <TabItem
            Header="Material Design 3">
            <views:MaterialDesign3Palette/>
        </TabItem>
        
        <TabItem
            Header="Open Color">
            <views:OpenColorPalette/>
        </TabItem>
    </TabControl>
</Window>
