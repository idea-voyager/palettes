                    <Border Background="{StaticResource Brush-Red-200}"/>
                    <Border Background="{StaticResource Brush-Red-300}"/>
                    <Border Background="{StaticResource Brush-Red-400}"/>
                    <Border Background="{StaticResource Brush-Red-500}"/>
                    <Border Background="{StaticResource Brush-Red-600}"/>
                    <Border Background="{StaticResource Brush-Red-700}"/>
                    <Border Background="{StaticResource Brush-Red-800}"/>
                    <Border Background="{StaticResource Brush-Red-900}"/>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="Orange" Style="{StaticResource TextBlock-ColorName}"/>
                    <Border Background="{StaticResource Brush-Orange-100}"/>
