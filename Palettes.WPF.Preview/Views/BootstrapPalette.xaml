                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="Green" Style="{StaticResource TextBlock-ColorName}"/>
                    <Border Background="{StaticResource Brush-Green-100}"/>
                    <Border Background="{StaticResource Brush-Green-200}"/>
                    <Border Background="{StaticResource Brush-Green-300}"/>
                    <Border Background="{StaticResource Brush-Green-400}"/>
                    <Border Background="{StaticResource Brush-Green-500}"/>
