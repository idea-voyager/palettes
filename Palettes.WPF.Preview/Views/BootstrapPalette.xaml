                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="Teal" Style="{StaticResource TextBlock-ColorName}"/>
                    <Border Background="{StaticResource Brush-Teal-100}"/>
                    <Border Background="{StaticResource Brush-Teal-200}"/>
                    <Border Background="{StaticResource Brush-Teal-300}"/>
                    <Border Background="{StaticResource Brush-Teal-400}"/>
                    <Border Background="{StaticResource Brush-Teal-500}"/>
                    <Border Background="{StaticResource Brush-Teal-600}"/>
