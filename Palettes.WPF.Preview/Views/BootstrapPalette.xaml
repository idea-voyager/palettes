                    <Border Background="{StaticResource Brush-Pink-400}"/>
                    <Border Background="{StaticResource Brush-Pink-500}"/>
                    <Border Background="{StaticResource Brush-Pink-600}"/>
                    <Border Background="{StaticResource Brush-Pink-700}"/>
                    <Border Background="{StaticResource Brush-Pink-800}"/>
                    <Border Background="{StaticResource Brush-Pink-900}"/>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="Red" Style="{StaticResource TextBlock-ColorName}"/>
