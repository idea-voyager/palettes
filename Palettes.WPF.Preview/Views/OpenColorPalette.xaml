<UserControl
    x:Class="PatioCode.Palettes.WPF.Preview.Views.OpenColorPalette"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:c="clr-namespace:PatioCode.Palettes.WPF.Preview.Controls"
    mc:Ignorable="d"
    d:DesignHeight="1500"
    d:DesignWidth="1000">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PatioCode.Palettes.WPF;component/Palettes/OpenColor.Brushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <c:Hyperlink
            Content="https://yeun.github.io/open-color/"/>
        
        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            
            <StackPanel
                Orientation="Vertical"
                HorizontalAlignment="Center">
                
                <StackPanel.Resources>
                    <Style
                        TargetType="{x:Type Border}"
                        BasedOn="{StaticResource Border-Color}">
                    </Style>
                    <Style TargetType="{x:Type StackPanel}">
                        <Setter Property="Orientation" Value="Horizontal"/>
                    </Style>
                    <Style
                        TargetType="{x:Type TextBlock}"
                        BasedOn="{StaticResource TextBlock-Label}">
                    </Style>
                </StackPanel.Resources>
                
                <StackPanel>
                    <StackPanel.Resources>
                        <Style
                            TargetType="TextBlock"
                            BasedOn="{StaticResource {x:Type TextBlock}}">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="Width" Value="50"/>
                        </Style>
                    </StackPanel.Resources>
                    <TextBlock Style="{StaticResource TextBlock-ColorName}"/>
                    <TextBlock Text="0"/>
                    <TextBlock Text="1"/>
                    <TextBlock Text="2"/>
                    <TextBlock Text="3"/>
                    <TextBlock Text="4"/>
                    <TextBlock Text="5"/>
                    <TextBlock Text="6"/>
                    <TextBlock Text="7"/>
                    <TextBlock Text="8"/>
                    <TextBlock Text="9"/>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="Gray" Style="{StaticResource TextBlock-ColorName}"/>
                    <Border Background="{StaticResource Brush-Gray-0}"/>
                    <Border Background="{StaticResource Brush-Gray-1}"/>
                    <Border Background="{StaticResource Brush-Gray-2}"/>
                    <Border Background="{StaticResource Brush-Gray-3}"/>
                    <Border Background="{StaticResource Brush-Gray-4}"/>
                    <Border Background="{StaticResource Brush-Gray-5}"/>
                    <Border Background="{StaticResource Brush-Gray-6}"/>
                    <Border Background="{StaticResource Brush-Gray-7}"/>
                    <Border Background="{StaticResource Brush-Gray-8}"/>
                    <Border Background="{StaticResource Brush-Gray-9}"/>
                </StackPanel>
                
                <StackPanel>
